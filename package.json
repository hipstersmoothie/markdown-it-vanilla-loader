{
  "name": "markdown-it-vanilla-loader",
  "version": "1.0.3",
  "description": "Load markdown files to html in webpack. Uses markdown-it and assumes nothing about your configuration.",
  "main": "dist/markdown-it-vanilla-loader.js",
  "author": {
    "name": "Andrew Lisowski",
    "email": "lisowski54@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hipstersmoothie/markdown-it-vanilla-loader"
  },
  "bugs": {
    "url": "https://github.com/hipstersmoothie/markdown-it-vanilla-loader/issues",
    "email": "lisowski54@gmail.com"
  },
  "keywords": [
    "webpack",
    "loader",
    "markdown",
    "markdown-it"
  ],
  "license": "Apache-2.0",
  "scripts": {
    "test": "jest",
    "lint": "xo",
    "build": "babel src -d dist --ignore '/__tests__/'",
    "prerelease": "npm run build",
    "release": "github-semantic-version --bump --changelog --push --publish"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.0.1",
    "babel-preset-env": "^1.7.0",
    "eslint-plugin-jest": "^21.17.0",
    "github-semantic-version": "^7.6.0",
    "jest": "^23.1.0",
    "jest-junit": "^5.1.0",
    "markdown-it-anchor": "^4.0.0",
    "prettier": "^1.13.4",
    "xo": "^0.21.1"
  },
  "dependencies": {
    "loader-utils": "^1.1.0",
    "markdown-it": "^8.4.1"
  },
  "prettier": {
    "singleQuote": true
  },
  "xo": {
    "extends": [
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "env": [
      "jest"
    ]
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "jest": {
    "reporters": [
      "default",
      "jest-junit"
    ],
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageReporters": [
      "cobertura",
      "html",
      "lcov"
    ]
  },
  "jest-junit": {
    "output": "./coverage/junit/junit.xml"
  },
  "gsv": {
    "majorLabel": "major",
    "minorLabel": "minor",
    "patchLabel": "patch",
    "internalLabel": "internal",
    "releasedLabel": "Released",
    "addReleasedLabelOnSuccess": true
  }
}
